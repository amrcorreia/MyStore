                        <div class="header-left d-flex align-items-center">
                            <!-- Logo -->
                            <div class="logo">


                                <a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/layout/img/logo/logo.png" alt=""></a>
                            </div>
