                                    <li><a asp-area="" asp-controller="Administration" asp-action="Index" class="nav-link">Users</a></li>
                                                    <li><a asp-area="" asp-controller="Products" asp-action="Index" class="nav-link">Products</a></li>
                                                                    <li><a asp-area="" asp-controller="Orders" asp-action="Index" class="nav-link">Orders</a></li>
