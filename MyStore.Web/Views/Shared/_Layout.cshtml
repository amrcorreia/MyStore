                                                                                                    @*<li><a asp-area="" asp-controller="Administration" asp-action="Index" class="nav-link" target="_blank">Admin Area</a></li>*@

                                                                                                                    @if (this.User.Identity.IsAuthenticated)
                                                                                                                    {
                                                                                                    <li><a asp-area="" asp-controller="Account" asp-action="ChangeUser" class="nav-link">@this.User.Identity.Name</a></li>
                                                                                                                        <li><a asp-area="" asp-controller="Account" asp-action="Logout" class="nav-link">Logout</a></li> }
