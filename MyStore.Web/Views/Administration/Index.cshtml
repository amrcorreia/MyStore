@model IEnumerable<MyStore.Web.Data.Entities.User>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<section>
    <div style="margin:auto; width:95%;">
        <br />
        <br />
        <br />
        <p>
            <a asp-controller="Account" asp-action="Register" class="btn btn-primary"><i class="fa fa-plus"></i> User</a>
        </p>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Users</h3>
                        <br />
                    </div>
                    <div class="panel-boby">
                        <table class="table" table-hover table-responsive table-striped" id="MyTable">
                            <thead>
                                <tr>
                                    @if (this.User.IsInRole("Admin"))
                                    {
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                    }
                                    <th>
                                        @Html.DisplayNameFor(model => model.VAT)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EmailConfirmed)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        @if (this.User.IsInRole("Admin"))
                                        {
                                            <th>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </th>
                                        }
                                        <td>
                                            @Html.DisplayFor(modelItem => item.VAT)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EmailConfirmed)
                                        </td>
                                        <td id="@item.Id" align="right">
                                            <a asp-controller="Account" asp-action="ChangeUserAdmin" asp-route-id="@item.Id" class="genric-btn primary large"><i class="fas fa-edit"></i></a>
                                        @*</td>
                                        <td align="right">*@

                                            <a asp-controller="Account" asp-action="Delete" asp-route-id="@item.Id" class="genric-btn danger large"><i class="fas fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
</section>

@section Scripts{
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();
        });

    </script>
}

